<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/dialog_pokemon_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/dialog_pokemon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />



        <TextView
            android:id="@+id/dialog_pokemon_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura: "/>

        <TextView
            android:id="@+id/dialog_pokemon_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso: "/>


        <TextView
            android:id="@+id/dialog_pokemon_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CategorÃ­a: "/>


        <TextView
            android:id="@+id/dialog_pokemon_ability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habilidad: "/>


        <LinearLayout
            android:id="@+id/dialog_pokemon_types_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>


        <LinearLayout
            android:id="@+id/dialog_pokemon_weaknesses_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>
</ScrollView>
